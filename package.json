{
  "name": "shapkarin.me",
  "homepage": "https://shapkarin.me",
  "version": "6.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.3.0",
    "axios": "^0.21.4",
    "clsx": "^2.1.1",
    "craco-less": "^1.20.0",
    "lodash.random": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.2.0",
    "react-query": "^3.24.4",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-tooltip": "^4.2.21"
  },
  "overrides": {
    "@babel/core": "^7.16.0"
  },
  "engines": {
    "node": ">=14.0.0 <=16.20.2"
  },
  "scripts": {
    "start": "npm run build:api && npm run generate:articles && craco start",
    "build:api": "node src/Generate-Backend/database-to-json.js",
    "build:spa": "craco build",
    "build:html-gallery": "node src/Generate-Backend/deploy-html-gallery.js",
    "build": "npm run build:api && npm run generate:articles && NODE_ENV=production BUILD_PATH='./dist' npm run build:spa && npm run build:html-gallery && npm run generate:sitemap",
    "build:local": "npm run build:api && npm run generate:articles && BUILD_PATH='./dist' npm run build:spa && react-snap",
    "test": "craco test",
    "generate:articles": "node src/Generate-Backend/generate-articles-list.js",
    "generate:sitemap": "sitemap-generator https://shapkarin.me -f public/sitemap.xml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true,
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "esm": "^3.2.25",
    "gray-matter": "^4.0.3",
    "prismjs": "^1.29.0",
    "react-markdown": "^8.0.7",
    "react-snap": "^1.23.0",
    "react-syntax-highlighter": "^15.6.1",
    "sitemap-generator-cli": "^7.5.0"
  },
  "reactSnap": {
    "source": "dist",
    "navigationTimeout": 900000
  }
}
